APPROACH 1:

class Main {
    public static void main(String[] args) {
        int[] arr={2,3,4,5,6};
        int t=6;
        int s=0;
        int e=arr.length-1;
        System.out.println(bs(arr,t,s,e));
    }
    static int bs(int[] arr,int t,int s,int e)
    {
        if(s>e)
        {
            return -1;
        }
        int m=(s+e)/2;
        if(arr[m]==t)
        {
            return m;
        }
        else if(arr[m]>t)
        {
            return bs(arr,t,s,m-1);
        }
        else
        {
            return bs(arr,t,m+1,e);
        }
    }
}


APPROACH 2:

class Main {
    public static void main(String[] args) {
        int[] arr={2,3,4,5,6};
        int t=6;
        int s=0;
        int e=arr.length-1;
        System.out.println(bs(arr,t,s,e));
    }
    static int bs(int[] arr,int t,int s,int e)
    {
        if(s>e)
        {
            return -1;
        }
        int m=(s+e)/2;
        if(arr[m]==t)
        {
            return m;
        }
        if(arr[s]<=arr[m])
        {
            if(t>=arr[s] &&  t < arr[m])
            {
                 return bs(arr,t,s,m-1);
            }
            else
            {
                return bs(arr,t,m+1,e);
            }
        }
        else
        {
        if(t>arr[m] && t <= arr[e])
        {
            return bs(arr,t,m+1,e);
        }
        return bs(arr,t,s,m-1);
        }
    }
}
